.cart-item {
  background-color: #fff;
}
.cart-item .cart-item-top {
  height: 60rpx;
  width: 100%;
  border-bottom: 2rpx solid #d1d1d1;
}
.cart-item .cart-item-top .cart-item-top-number {
  float: left;
  display: inline-block;
  line-height: 60rpx;
}
.cart-item .cart-item-top .cart-item-top-del {
  float: right;
}
.cart-item .cart-item-top .cart-item-top-del button {
  float: right;
  width: 100rpx;
  height: 90%;
}
.cart-item .cart-item-content {
  height: 250rpx;
  width: 100%;
}
.cart-item .cart-item-content .cart-item-content-check {
  float: left;
  line-height: 250rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.cart-item .cart-item-content .cart-item-content-check checkbox {
  transform: scale(1.3);
}
.cart-item .cart-item-content .cart-item-content-image image {
  float: left;
  height: 210rpx;
  width: 240rpx;
  margin-top: 20rpx;
}
.cart-item .cart-item-content .cart-item-content-right {
  float: left;
  margin: 20rpx 14rpx;
  height: 210rpx;
  width: 50%;
}
.cart-item .cart-item-content .cart-item-content-right .cart-item-content-right-title {
  display: inline-block;
  width: 100%;
  height: 120rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /*设置方向*/
  -webkit-line-clamp: 3;
  /*设置超过为省略号的行数*/
  overflow: hidden;
}
.cart-item .cart-item-content .cart-item-content-right .cart-item-content-right-bottom .cart-item-content-right-bottom-price {
  float: left;
  font-size: 17px;
  color: red;
  padding: 8px 0;
}
.cart-item .cart-item-content .cart-item-content-right .cart-item-content-right-bottom .cart-item-content-right-bottom-count {
  float: right;
  margin-top: 7rpx;
}
.cart-item .cart-item-content .cart-item-content-right .cart-item-content-right-bottom .cart-item-content-right-bottom-count .item {
  float: left;
}
.cart-item .cart-item-content .cart-item-content-right .cart-item-content-right-bottom .cart-item-content-right-bottom-count .count {
  display: inline-block;
  vertical-align: top;
  margin-top: 10rpx;
  margin: 10rpx;
}