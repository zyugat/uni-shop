.order .order-top {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
}
.order .order-top text {
  color: #000000;
  font-size: 22px;
  font-weight: bold;
}
.order .order-content .input-item {
  display: flex;
  margin-left: 32rpx;
  margin-right: 32rpx;
  height: 50px;
  align-items: center;
  border-bottom: 1px solid #efeff4;
  margin-bottom: 20rpx;
}
.order .order-content .input-item .title-content {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 18px;
}
.order .order-content .input-item input {
  margin-left: 40rpx;
}
.order .button {
  height: 50px;
  line-height: 50px;
  margin-top: 60rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  border-radius: 50rpx;
  font-size: 20px;
  background-color: #008AFE;
  color: #FFFFFF;
  text-align: center;
}